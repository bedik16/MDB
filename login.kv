#:include connected.kv
#:include register.kv

<Login>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "background.jpg"
                
    BoxLayout:
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            size_hint_y: 1
            text: 'Welcome to the smart charging station'
            font_size: 32

        BoxLayout:
            size_hint_y: 8
            orientation: 'vertical'

            Label:
                size_hint: 1, .2
                spacing: 20
                text: "E-mail"
                font_size: 20
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                size_hint: 1, .9
                spacing: 20
                id: login
                multiline:False
                font_size: 24

        BoxLayout:
            size_hint_y: 8
            orientation: 'vertical'
            Label:
                size_hint: 1, .2
                spacing: 20
                text: 'Password'
                halign: 'left'
                font_size: 20
                text_size: root.width-20, 20

            TextInput:
                size_hint: 1, .9
                id: password
                multiline:False
                password:True
                font_size: 24


        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 12
            padding: 20
            spacing: 20
            Button:
                size_hint: 1, 1 
                text: 'Register'
                font_size: 24
                on_press: root.do_register()

            Button:
                size_hint: 1, 1
                text: "Login"
                font_size: 24
                on_press: root.do_login(login.text, password.text)

        BoxLayout:
            size_hint_y: .5
            orientation: "vertical"
            Label:
                text: "First time use ? Please register using the Register button"
                color: 1,0,0,1