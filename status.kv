<Status>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "background.jpg"

    GridLayout:
        cols: 1
        padding: [50, 10, 50, 10]
        BoxLayout:
            size_hint_y: .2
            orientation: "vertical"
            Label:
                text: "Charge Status"
                font_size: 32

        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Progression: {}%".format(int(pb.value))
                font_size: 24
                


            ProgressBar:
                id: pb
                size_hint_y: .9
                value: 78

    